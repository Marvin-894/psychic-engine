/* Usamos Roboto, similar a la fuente Gotham de Roblox */
body {
    font-family: 'Roboto', sans-serif;
    background-color: #ECECEC; /* Un gris claro como fondo de pantalla */
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
}

.calendario-roblox {
    background-color: #FFFFFF; /* Fondo blanco para el contenedor principal */
    border: 5px solid #232128; /* Borde oscuro y grueso */
    border-radius: 20px;
    padding: 30px;
    box-shadow: 10px 10px 0px #00A2FF; /* Sombra vibrante, color Roblox Blue */
    width: 90%;
    max-width: 600px;
    text-align: center;
}

h1 {
    color: #FF0000; /* Rojo vibrante */
    font-size: 2.2em;
    margin-bottom: 20px;
    text-shadow: 2px 2px 0px #000000;
}

.tarjeta-dia {
    background-color: #00A2FF; /* Azul de Roblox para la tarjeta del dÃ­a */
    color: #FFFFFF;
    padding: 20px;
    border-radius: 15px;
    border: 3px solid #232128;
}

#dia-actual {
    font-size: 1.5em;
    background-color: #FFC000; /* Amarillo/Dorado para resaltar la fecha */
